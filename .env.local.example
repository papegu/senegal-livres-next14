# Base URL for callbacks (set to your current port/domain)
# For development on port 3003: http://localhost:3003
# For development on port 3000: http://localhost:3000
# For production: https://yourdomain.com
# REQUIRED for callbacks, email links, and redirects
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Stripe Configuration (for secure card payments)
# Get your keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# Wave API Configuration
# Get from: https://merchant.wavepayment.com
WAVE_API_KEY=your_wave_sandbox_api_key_here
WAVE_BASE_URL=https://api.waveprod.me/wave/checkout/v1

# Orange Money Configuration
# Get from: https://developer.orange.sn
ORANGE_API_KEY=your_orange_money_sandbox_api_key_here
ORANGE_API_URL=https://api.orange.sn/payment/v1
ORANGE_MERCHANT_KEY=your_orange_merchant_key_here

# Ecobank Card Payment Configuration
# Get from: https://ecobank.sn
ECOBANK_API_KEY=your_ecobank_sandbox_api_key_here
ECOBANK_API_URL=https://api.ecobank.sn/payment/v1
ECOBANK_MERCHANT_ID=your_ecobank_merchant_id_here

# PayDunya Configuration
# Docs: https://paydunya.com/
# Use TEST keys for sandbox; switch to LIVE for production.
# Note: TEST keys require KYC validation on PayDunya dashboard.
# For local development without KYC, uncomment PAYDUNYA_USE_MOCK=true
PAYDUNYA_MASTER_KEY=test_master_key_here
PAYDUNYA_PUBLIC_KEY=test_public_key_here
PAYDUNYA_PRIVATE_KEY=test_private_key_here
PAYDUNYA_TOKEN=test_token_here
PAYDUNYA_CALLBACK_URL=http://localhost:3000/api/paydunya/callback
# PAYDUNYA_USE_MOCK=true  # Uncomment to test with mock/sandbox mode

# Production PayDunya keys (uncomment when going live)
# PAYDUNYA_MASTER_KEY=live_master_key_here
# PAYDUNYA_PUBLIC_KEY=live_public_key_here
# PAYDUNYA_PRIVATE_KEY=live_private_key_here
# PAYDUNYA_TOKEN=live_token_here
# PAYDUNYA_CALLBACK_URL=https://yourdomain.com/api/paydunya/callback

# JWT Secret
# REQUIRED: JWT secret for authentication (minimum 16 characters recommended)
# Generate a strong secret: openssl rand -base64 32
# This is used for cookie-based authentication
JWT_SECRET=dev_secret_change_me
ADMIN_TOKEN=admin_token_dev

# Supabase Configuration
# REQUIRED for PDF storage and retrieval
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Postgres (Neon or local)
DATABASE_URL=postgresql://<username>:<password>@<host>/senegal_livres?sslmode=require

# Node environment
NODE_ENV=development