generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model adminstats {
  id                Int      @id @default(autoincrement())
  totalUsers        Int      @default(0)
  totalBooks        Int      @default(0)
  totalTransactions Int      @default(0)
  totalRevenue      Int      @default(0)
  lastUpdated       DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model book {
  id              Int       @id @default(autoincrement())
  uuid            String    @unique(map: "Book_uuid_key")
  title           String
  author          String
  description     String
  price           Float
  coverImage      String    @default("")
  pdfFile         String    @default("")
  pdfFileName     String    @default("")
  stock           Int       @default(0)
  category        String    @default("")
  status          String    @default("available")
  eBook           Boolean   @default(true)
  source          String    @default("admin")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  slug            String?   @unique
  cover_image_url String?
  pdf_r2_key      String?
  pdf_r2_url      String?
  has_ebook       Boolean?  @default(false)
  updated_at      DateTime? @default(now()) @db.Timestamptz(6)
}

model cartitem {
  id        Int      @id @default(autoincrement())
  userId    Int
  bookId    Int
  quantity  Int      @default(1)
  addedAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, bookId], map: "CartItem_userId_bookId_key")
}

model purchase {
  id            Int       @id @default(autoincrement())
  uuid          String    @unique(map: "Purchase_uuid_key")
  userId        Int
  bookId        Int
  transactionId Int?
  amount        Int
  downloadCount Int       @default(0)
  lastDownload  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model submission {
  id          Int       @id @default(autoincrement())
  uuid        String    @unique(map: "Submission_uuid_key")
  userId      Int
  title       String
  author      String
  description String
  pdfFile     String    @default("")
  pdfFileName String    @default("")
  category    String    @default("")
  status      String    @default("pending")
  reviewNotes String    @default("")
  submittedAt DateTime  @default(now())
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model transaction {
  id                   Int       @id @default(autoincrement())
  uuid                 String    @unique(map: "Transaction_uuid_key")
  orderId              String    @unique(map: "Transaction_orderId_key")
  userId               Int?
  amount               Int
  paymentMethod        String
  status               String
  paydunyaInvoiceToken String    @default("")
  paydunyaResponseCode String    @default("")
  paydunyaStatus       String    @default("")
  providerTxId         String    @default("")
  bookIds              String    @default("")
  description          String    @default("")
  customerEmail        String    @default("")
  rawPayload           String    @default("")
  paymentConfirmedAt   DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique(map: "User_email_key")
  password  String
  role      Role     @default(client)
  blocked   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  client
  admin
}
